<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.volozhinsky.newsviewer.ui.NewsListViewModel" />
        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.NewsListFragment">

        <EditText
            android:id="@+id/editTextKeyword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/editTextHint"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editTextKeyword" />

        <com.volozhinsky.newsviewer.ui.custom.CustomProgressBar
            android:id="@+id/newslistProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:goneUnless="@{viewModel.loadingProgressBarLiveData}"/>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lottieView"
            app:lottie_rawRes="@raw/emptybase_animation"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:goneUnless="@{viewModel.emptyBase}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>